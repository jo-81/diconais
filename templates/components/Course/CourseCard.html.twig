<div {{ attributes.defaults({class: 'col-12'}) }}>
    <article class="card shadow-sm card-body">
        <header class="mb-2">
            <small 
                class="mb-3 d-inline-block px-3 py-1 rounded-3" 
                style="line-height: normal; color: {{ course.category.color }}; background-color: {{ course.category.color }}15">
                {{ course.category.name }}
            </small>
            <h2 class="h4 mb-0 title">{{ course.name }}</h2>
        </header>

        <div>{{ course.content|u.truncate(250, ' ...', false) }}</div>

        <footer class="mt-3">
            <a href="{{ path('course.show', {slug: course.slug}) }}" class="text-decoration-none">Consulter</a>
        </footer>
    </article>
</div>
