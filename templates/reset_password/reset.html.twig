{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<twig:Auth:AuthSection>
    <twig:block name="title">Réinitialiser votre mot de passe</twig:block>
    
    <twig:block name="content">
        {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Réinitialiser</button>
        {{ form_end(resetForm) }}
    </twig:block>
</twig:Auth:AuthSection>
{% endblock %}
